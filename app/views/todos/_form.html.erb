<%= form_for(@todo, html: {class: 'form-inline'}) do |f| %>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: "form-control", placeholder: 'Make groceries' %>
  </div>

  <div class="form-group">
    <%= f.label :due %>
    <%= f.date_field :due, class: "form-control" %>
  </div>

  <%= f.button fa_icon('plus', text: "Add Todo"), class: 'btn btn-primary' %>
<% end %>